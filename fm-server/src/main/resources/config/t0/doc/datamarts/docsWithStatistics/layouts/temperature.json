{
	"id": "temperature",
	"name": "Temperature",
	"layout": {
		"layoutType": "line",
		"header": [
			{
				"id": "no",
				"label": "#",
				"value": "index",
				"template": "temperature",
				"width": "4%",
				"sortable": false
			},
			{
				"id": "caption",
				"label": "Business Process",
				"value": "caption",
				"template": "entityIcon",
				"type": "type",
				"link": "link",
				"width": "25%"
			},
			{
				"id": "account",
				"label": "Account",
				"value": "accountName",
				"template": "link",
				"link": "accountLink",
				"width": "15%"
			},
			{
				"id": "touches",
				"label": "Touches",
				"value": "touches"
			},
			{
				"id": "latestItem",
				"label": "Latest Record",
				"value": "latestItem",
				"template": "entityIcon",
				"type": "latestItemType",
				"link": "latestItemLink",
				"width": "25%"
			},
			{
				"id": "unreadInteractions",
				"label": "Unread",
				"value": "unreadInteractions"
			},
			{
				"id": "latestInteraction",
				"label": "Latest Interaction",
				"value": "latestInteraction",
				"template": "channelIcon",
				"type": "latestInteractionChannelType",
				"width": "15%"
			}
		],
		"data": [
			"{{data}}",
			{
				"index": "=> index(data)",
				"caption": "{{caption}}",
				"type": "{{docType.id}}",
				"link": "/doc/{{id}}",
				"accountName": "{{accountName}}",
				"accountLink": "/account/{{accountId}}",
				"temperature": "{{temperature}}",
				"touches": "{{touches}}",
				"latestItem": "{{latestItem.caption}}",
				"latestItemType": "{{latestItem.meta.itemType.id}}",
				"latestItemLink": "/doc/{{latestItem.id}}",
				"unreadInteractions": "=> nvl(unreadInteractionsCount, '0')",
				"latestInteraction": "=> relativeTime(latestInteraction.date)",
				"latestInteractionChannelType": "{{latestInteraction.channel.id}}"
			}
		]
	}
}