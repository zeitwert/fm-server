							},
							{
								"label": "Condition",
								"type": "number",
								"alignment": "right",
								"accessor": "condition"
							},
							{
								"label": "Strain",
								"alignment": "right",
								"accessor": "strain"
							},
							{
								"label": "Strength",
								"alignment": "right",
								"accessor": "strength"
							}
						]
