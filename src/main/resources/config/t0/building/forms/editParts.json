						"storage": "Full",
						"identity": "id",
						"enableAutocomplete": false,
						"queryUrl": "{{enumBaseUrl}}/building/codeBuildingPartCatalog",
						"path": "",
						"formatItem": "{{$item.name}}",
						"isRequired": true,
						"enabled": "{{!!building.account}}"
