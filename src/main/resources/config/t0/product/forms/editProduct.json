{
	"id": "product/editProduct",
	"formDef": {
		"rows": [
			{
				"cols": [
					{
						"size": 8,
						"type": "text",
						"label": "Name",
						"value": "{{product.name}}",
						"isRequired": true
					},
					{
						"size": 4,
						"type": "select",
						"label": "Currency",
						"value": "{{product.currency}}",
						"dataSource": "Rest",
						"storage": "Full",
						"identity": "id",
						"enableAutocomplete": false,
						"queryUrl": "{{enumBaseUrl}}/common/codeCurrency",
						"path": "",
						"formatItem": "{{$item.name}}",
						"isRequired": true
					},
					{
						"size": 6,
						"type": "select",
						"label": "Model",
						"value": "{{product.productModel}}",
						"dataSource": "Rest",
						"storage": "Full",
						"identity": "id",
						"enableAutocomplete": false,
						"queryUrl": "{{enumBaseUrl}}/product/codeProductModel",
						"path": "",
						"formatItem": "{{$item.name}}",
						"isRequired": true,
						"enabled": "{{!product.parent}}"
					},
					{
						"size": 6,
						"type": "select",
						"label": "Category",
						"value": "{{product.productModel.productCategory}}",
						"dataSource": "Rest",
						"storage": "Full",
						"identity": "id",
						"enableAutocomplete": false,
						"queryUrl": "{{enumBaseUrl}}/product/codeProductCategory",
						"path": "",
						"formatItem": "{{$item.name}}",
						"isRequired": true,
						"enabled": false
					},
					{
						"size": 6,
						"type": "select",
						"label": "Areas",
						"value": "{{product.areas}}",
						"dataSource": "Rest",
						"storage": "Full",
						"identity": "id",
						"multi": true,
						"enableAutocomplete": false,
						"queryUrl": "{{enumBaseUrl}}/common/codeArea",
						"formatItem": "{{$item.name}}"
					},
					{
						"size": 6,
						"type": "select",
						"label": "Parent",
						"value": "{{product.parent}}",
						"dataSource": "Rest",
						"storage": "Id",
						"lookupUrl": "{{apiBaseUrl}}/product/products/{{$id}}",
						"identity": "id",
						"formatItem": "{{$item.caption}}",
						"queryUrl": "{{apiBaseUrl}}/product/products?filter[searchText]={{$searchText}}&filter[parent.id]=null{{product.id !== '##NEW##' ? '&filter[id][NEQ]=' + product.id : ''}}",
						"enableAutocomplete": true,
						"autocompleteMinLength": 2,
						"path": "",
						"enabled": "{{!control.edit}}"
					}
				]
			},
			{
				"cols": [
					{
						"size": 12,
						"type": "subform",
						"label": "Term Sheet ({{product.productModel.termsheetModel.name}})",
						"value": "{{product.termsheet}}",
						"visible": "{{!!product.productModel}}",
						"layoutDefinition": "{{termsheetDefinition}}"
					}
				]
			},
			{
				"cols": [
					{
						"type": "accordion",
						"visible": "{{!control.enabled}}",
						"sections": [
							{
								"type": "panel",
								"label": "System Information",
								"rows": [
									{
										"cols": [
											{
												"size": 6,
												"type": "text",
												"label": "Created By",
												"value": "{{product.meta.createdByUser.caption}}",
												"visible": "{{!control.enabled}}",
												"enabled": false
											},
											{
												"size": 6,
												"type": "date",
												"enableTime": true,
												"format": "dddd, DD.MM.YYYY HH:mm",
												"label": "&nbsp;",
												"value": "{{product.meta.createdAt}}",
												"visible": "{{!control.enabled}}",
												"enabled": false
											},
											{
												"size": 6,
												"type": "text",
												"label": "Last Modified By",
												"value": "{{product.meta.modifiedByUser.caption}}",
												"visible": "{{!control.enabled}}",
												"enabled": false
											},
											{
												"size": 6,
												"type": "date",
												"enableTime": true,
												"format": "dddd, DD.MM.YYYY HH:mm",
												"label": "&nbsp;",
												"value": "{{product.meta.modifiedAt}}",
												"visible": "{{!control.enabled}}",
												"enabled": false
											}
										]
									}
								]
							}
						]
					}
				]
			}
		]
	}
}