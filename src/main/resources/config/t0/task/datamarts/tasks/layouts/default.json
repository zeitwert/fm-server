{
	"id": "default",
	"name": "Default",
	"layout": {
		"layoutType": "line",
		"header": [
			{
				"id": "name",
				"label": "Name",
				"value": "name",
				"template": "link",
				"link": "link"
			},
			{
				"id": "area",
				"label": "Area",
				"value": "area"
			},
			{
				"id": "stage",
				"label": "Stage",
				"value": "stage"
			},
			{
				"id": "priority",
				"label": "Priority",
				"value": "priority"
			},
			{
				"id": "dueDate",
				"label": "Due Date",
				"template": "date",
				"value": "dueDate"
			},
			{
				"id": "reminderDate",
				"label": "Reminder Date",
				"template": "date",
				"value": "reminderDate"
			},
			{
				"id": "ref",
				"label": "Reference",
				"value": "refName",
				"template": "link",
				"link": "refLink"
			},
			{
				"id": "assignee",
				"label": "Assignee",
				"value": "assignee"
			}
		],
		"data": [
			"{{data}}",
			{
				"id": "{{id}}",
				"name": "{{name}}",
				"link": "/task/{{id}}",
				"refName": "=> either(refObj.id, refObj.caption, refDoc.caption)",
				"refLink": "=> either({{refObj.id}}, '/obj/{{refObj.id}}', '/doc/{{refDoc.id}}')",
				"priority": "{{taskPriority.name}}",
				"dueDate": "{{dueDate}}",
				"reminderDate": "{{reminderDate}}",
				"area": "=> join(areas)",
				"stage": "{{caseStage.name}}",
				"assignee": "{{assignee.caption}}"
			}
		]
	}
}