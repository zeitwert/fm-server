{
	"id": "task/editTask",
	"formDef": {
		"rows": [
			{
				"cols": [
					{
						"size": 6,
						"type": "select",
						"label": "Reference",
						"value": "{{task.refObj}}",
						"dataSource": "Rest",
						"storage": "Id",
						"lookupUrl": "{{apiBaseUrl}}/obj/objs/{{$id}}",
						"identity": "id",
						"formatItem": "{{$item.caption}}",
						"queryUrl": "{{apiBaseUrl}}/obj/objs",
						"enableAutocomplete": false,
						"path": "",
						"visible": "{{!!task.refObj}}",
						"enabled": false
					}
				]
			},
			{
				"cols": [
					{
						"size": 6,
						"type": "select",
						"label": "Reference",
						"value": "{{task.refDoc}}",
						"dataSource": "Rest",
						"storage": "Id",
						"lookupUrl": "{{apiBaseUrl}}/doc/docs/{{$id}}",
						"identity": "id",
						"formatItem": "{{$item.caption}}",
						"queryUrl": "{{apiBaseUrl}}/doc/docs?filter[docTypeId][IN]=doc_advice,doc_opportunity,doc_lead",
						"enableAutocomplete": false,
						"path": "",
						"visible": "{{!!task.refDoc}}",
						"enabled": false
					}
				]
			},
			{
				"cols": [
					{
						"size": 6,
						"type": "text",
						"label": "Name",
						"value": "{{task.name}}",
						"isRequired": true
					}
				]
			},
			{
				"cols": [
					{
						"size": 12,
						"type": "textarea",
						"label": "Description",
						"value": "{{task.description}}"
					}
				]
			},
			{
				"cols": [
					{
						"size": 6,
						"type": "select",
						"label": "Assignee",
						"value": "{{task.assignee}}",
						"dataSource": "Rest",
						"storage": "Id",
						"lookupUrl": "{{apiBaseUrl}}/obj/objs/{{$id}}",
						"identity": "id",
						"queryUrl": "{{apiBaseUrl}}/obj/objs?filter[objTypeId][IN]=obj_user,obj_contact",
						"enableAutocomplete": false,
						"path": "",
						"formatItem": "{{$item.caption}}",
						"isRequired": true
					},
					{
						"size": 6,
						"type": "select",
						"label": "Areas",
						"value": "{{task.areas}}",
						"dataSource": "Rest",
						"storage": "Full",
						"identity": "id",
						"multi": true,
						"enableAutocomplete": false,
						"queryUrl": "{{enumBaseUrl}}/account/codeArea",
						"formatItem": "{{$item.name}}"
					}
				]
			},
			{
				"cols": [
					{
						"size": 6,
						"type": "date",
						"label": "Due Date",
						"value": "{{task.dueDate}}",
						"format": "DD.MM.YYYY",
						"isRequired": true,
						"maxDate": "today"
					},
					{
						"size": 6,
						"type": "select",
						"label": "Priority",
						"value": "{{task.taskPriority}}",
						"dataSource": "Rest",
						"storage": "Full",
						"identity": "id",
						"enableAutocomplete": false,
						"queryUrl": "{{enumBaseUrl}}/task/codeTaskPriority",
						"formatItem": "{{$item.name}}",
						"isRequired": true
					}
				]
			},
			{
				"cols": [
					{
						"size": 6,
						"type": "boolean",
						"label": "Reminder set",
						"value": "{{control.reminderSet}}"
					},
					{
						"size": 6,
						"type": "date",
						"label": "Reminder Date",
						"value": "{{task.reminderDate}}",
						"format": "DD.MM.YYYY",
						"visible": "{{control.reminderSet}}",
						"maxDate": "today"
					}
				]
			},
			{
				"cols": [
					{
						"type": "accordion",
						"visible": "{{!control.enabled}}",
						"sections": [
							{
								"type": "panel",
								"label": "System Information",
								"rows": [
									{
										"cols": [
											{
												"size": 6,
												"type": "text",
												"label": "Created By",
												"value": "{{task.meta.createdByUser.caption}}",
												"visible": "{{!control.enabled}}",
												"enabled": false
											},
											{
												"size": 6,
												"type": "date",
												"enableTime": true,
												"format": "dddd, DD.MM.YYYY HH:mm",
												"label": "&nbsp;",
												"value": "{{task.meta.createdAt}}",
												"visible": "{{!control.enabled}}",
												"enabled": false
											},
											{
												"size": 6,
												"type": "text",
												"label": "Last Modified By",
												"value": "{{task.meta.modifiedByUser.caption}}",
												"visible": "{{!control.enabled}}",
												"enabled": false
											},
											{
												"size": 6,
												"type": "date",
												"enableTime": true,
												"format": "dddd, DD.MM.YYYY HH:mm",
												"label": "&nbsp;",
												"value": "{{task.meta.modifiedAt}}",
												"visible": "{{!control.enabled}}",
												"enabled": false
											}
										]
									}
								]
							}
						]
					}
				]
			}
		]
	}
}