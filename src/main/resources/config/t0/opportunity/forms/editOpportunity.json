{
	"id": "opportunity/editOpportunity",
	"formDef": {
		"rows": [
			{
				"cols": [
					{
						"size": 6,
						"type": "select",
						"label": "Account",
						"value": "{{opportunity.account}}",
						"dataSource": "Rest",
						"storage": "Id",
						"lookupUrl": "{{apiBaseUrl}}/account/accounts/{{$id}}",
						"identity": "id",
						"formatItem": "{{$item.caption}}",
						"queryUrl": "{{apiBaseUrl}}/account/accounts?filter[searchText]={{$searchText}}",
						"enableAutocomplete": true,
						"autocompleteMinLength": 2,
						"path": "",
						"isRequired": true,
						"enabled": "{{!opportunity.account}}"
					},
					{
						"size": 6,
						"type": "select",
						"label": "Contact",
						"value": "{{opportunity.contact}}",
						"dataSource": "Rest",
						"storage": "Id",
						"lookupUrl": "{{apiBaseUrl}}/contact/contacts/{{$id}}",
						"identity": "id",
						"formatItem": "{{$item.caption}}",
						"queryUrl": "{{apiBaseUrl}}/contact/contacts?filter[account.id]={{opportunity.account}}",
						"enableAutocomplete": false,
						"path": "",
						"enabled": "{{!!opportunity.account}}"
					}
				]
			},
			{
				"cols": [
					{
						"size": 6,
						"type": "select",
						"label": "Type",
						"value": "{{opportunity.opportunityType}}",
						"dataSource": "Rest",
						"storage": "Full",
						"identity": "id",
						"enableAutocomplete": false,
						"queryUrl": "{{enumBaseUrl}}/opportunity/codeOpportunityType",
						"path": "",
						"formatItem": "{{$item.name}}",
						"enabled": "{{!!opportunity.account}}",
						"isRequired": true
					},
					{
						"size": 6,
						"type": "select",
						"label": "Reference",
						"value": "{{opportunity.refDoc}}",
						"dataSource": "Rest",
						"storage": "Id",
						"lookupUrl": "{{apiBaseUrl}}/doc/docs/{{$id}}",
						"identity": "id",
						"formatItem": "{{$item.caption}}",
						"queryUrl": "{{apiBaseUrl}}/doc/docs?filter[account.id]={{opportunity.account}}&filter[docTypeId][IN]=doc_advice,doc_opportunity,doc_lead",
						"enableAutocomplete": false,
						"path": "",
						"enabled": "{{!!opportunity.account}}"
					}
				]
			},
			{
				"cols": [
					{
						"size": 6,
						"type": "text",
						"label": "Name",
						"value": "{{opportunity.name}}",
						"enabled": "{{!!opportunity.account}}",
						"isRequired": true
					},
					{
						"size": 6,
						"type": "select",
						"label": "Areas",
						"value": "{{opportunity.areas}}",
						"dataSource": "Rest",
						"storage": "Full",
						"identity": "id",
						"multi": true,
						"enableAutocomplete": false,
						"queryUrl": "{{enumBaseUrl}}/common/codeArea",
						"formatItem": "{{$item.name}}",
						"enabled": "{{!!opportunity.account}}"
					}
				]
			},
			{
				"cols": [
					{
						"size": 12,
						"type": "text",
						"label": "Next step",
						"value": "{{opportunity.nextStep}}",
						"enabled": "{{!!opportunity.account}}"
					}
				]
			},
			{
				"cols": [
					{
						"size": 12,
						"type": "textarea",
						"label": "Remarks",
						"value": "{{opportunity.remarks}}",
						"enabled": "{{!!opportunity.account}}"
					}
				]
			},
			{
				"cols": [
					{
						"type": "accordion",
						"visible": "{{!control.enabled}}",
						"sections": [
							{
								"type": "panel",
								"label": "System Information",
								"rows": [
									{
										"cols": [
											{
												"size": 6,
												"type": "text",
												"label": "Created By",
												"value": "{{opportunity.meta.createdByUser.caption}}",
												"visible": "{{!control.enabled}}",
												"enabled": false
											},
											{
												"size": 6,
												"type": "date",
												"enableTime": true,
												"format": "dddd, DD.MM.YYYY HH:mm",
												"label": "&nbsp;",
												"value": "{{opportunity.meta.createdAt}}",
												"visible": "{{!control.enabled}}",
												"enabled": false
											},
											{
												"size": 6,
												"type": "text",
												"label": "Last Modified By",
												"value": "{{opportunity.meta.modifiedByUser.caption}}",
												"visible": "{{!control.enabled}}",
												"enabled": false
											},
											{
												"size": 6,
												"type": "date",
												"enableTime": true,
												"format": "dddd, DD.MM.YYYY HH:mm",
												"label": "&nbsp;",
												"value": "{{opportunity.meta.modifiedAt}}",
												"visible": "{{!control.enabled}}",
												"enabled": false
											}
										]
									}
								]
							}
						]
					}
				]
			}
		]
	}
}